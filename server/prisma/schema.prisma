generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  email            String         @unique
  password         String?
  isVerified       Boolean        @default(false)
  isActive         Boolean        @default(true)
  verificationLink String?
  username         String?
  role             Int            @default(2000)
  Token            Token[]
  victimHistory    AdminHistory[] @relation("victimHistory")
  initiatorHistory AdminHistory[] @relation("initiatorHistory")

  @@map("users")
}

model Token {
  id           Int    @id @default(autoincrement())
  userId       Int
  refreshToken String @unique()
  user         User   @relation(fields: [userId], references: [id])

  @@map("tokens")
}

model AdminHistory {
  id          Int      @id @default(autoincrement())
  action_type String
  new_value   String
  initiatorId Int
  victimId    Int
  createdAt   DateTime @default(now())
  victim      User     @relation("victimHistory", fields: [victimId], references: [id])
  initiator   User     @relation("initiatorHistory", fields: [initiatorId], references: [id])

  @@map("admin_history")
}
